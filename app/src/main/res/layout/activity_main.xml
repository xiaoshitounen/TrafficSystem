<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/map_compass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map_compass"
                android:layout_marginTop="15dp"
                />

            <RelativeLayout
                android:id="@+id/map_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/map_location_bg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/map_location"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="95dp"
                android:background="@drawable/map_zoom_bg"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_above="@+id/map_location"
                android:layout_marginBottom="15dp"
                >

                <ImageView
                    android:id="@+id/map_zoom_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/map_zoom_add"
                    android:layout_centerHorizontal="true"
                    >
                </ImageView>

                <View
                    android:layout_width="18dp"
                    android:layout_height="1dp"
                    android:background="#C0C0C0"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:id="@+id/map_zoom_reduce"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/map_zoom_reduce"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    >
                </ImageView>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <!--侧滑部分必须要放在下面，否则无法获取点击事件-->
    <LinearLayout
        android:paddingTop="40dp"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:background="#F4F4F4"
        tools:ignore="RtlHardcoded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="地图类型"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >

            <LinearLayout
                android:id="@+id/map_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/map_normal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标准地图"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/map_satellite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/map_satellite"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卫星地图"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/map_night"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/map_night"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜间地图"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="事件"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >
            <RelativeLayout
                android:id="@+id/map_traffic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/map_traffic_bg"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/map_traffic"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>